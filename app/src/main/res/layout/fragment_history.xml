                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_history2"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@id/img_history2"
                    android:layout_toRightOf="@+id/img_history2"
                    android:drawableStart="@drawable/ic_baseline_access_time_24"
                    android:drawableTint="@color/dandelion"
                    android:drawablePadding="5dp"
                    android:text="Time:"
                    android:textColor="@color/dandelion"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/acceleration2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time2"
                    android:layout_marginStart="10dp"
