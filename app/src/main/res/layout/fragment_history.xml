<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment.HistoryFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dandelion">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/img_history"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_bike" />

                <TextView
                    android:id="@+id/title_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@id/img_history"
                    android:layout_toRightOf="@id/img_history"
                    android:alpha="0.7"
                    android:text="Journey 1"
                    android:textColor="@color/dandelion"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_history"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@id/img_history"
                    android:layout_toRightOf="@+id/img_history"
                    android:drawableStart="@drawable/ic_baseline_access_time_24"
                    android:drawableTint="@color/dandelion"
                    android:drawablePadding="5dp"
                    android:text="Time:"
                    android:textColor="@color/dandelion"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/acceleration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@id/img_history"
                    android:layout_toRightOf="@+id/img_history"
                    android:drawableStart="@drawable/ic_baseline_speed_24"
                    android:drawableTint="@color/dandelion"
                    android:drawablePadding="10dp"
                    android:text="Acceleration:"
                    android:textColor="@color/dandelion"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/acceleration"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@id/img_history"
                    android:layout_toRightOf="@+id/img_history"
                    android:drawableStart="@drawable/ic_baseline_social_distance_24"
                    android:drawableTint="@color/dandelion"
                    android:drawablePadding="10dp"
                    android:text="Distance:"
                    android:textColor="@color/dandelion"
                    android:textSize="16dp" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
