                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@id/img_history2"
                    android:layout_toRightOf="@+id/img_history2"
                    android:drawableStart="@drawable/ic_baseline_social_distance_24"
                    android:drawableTint="@color/dandelion"
                    android:drawablePadding="10dp"
                    android:text="Distance:"
                    android:textColor="@color/dandelion"
                    android:textSize="16dp" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
